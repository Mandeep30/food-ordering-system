                <groupId>com.neonex</groupId>
                <artifactId>saga</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.neonex</groupId>
                <artifactId>outbox</artifactId>
                <version>${project.version}</version>
